{
  /* USER CODE BEGIN 5 */
	/* Infinite loop */
	for (;;) {
//		HAL_GPIO_TogglePin(GPIOB, GPIO_PIN_7);
//		HAL_Delay(1000);
		osDelay(1);
	}
  /* USER CODE END 5 */
}

